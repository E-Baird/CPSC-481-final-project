<div class="card">
    <div class="card-header">
        Job/Personal Details
    </div>
    <div class="card-body">
        <EditForm Model="@fullserveform" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <input type="file" id="exampleInputFile">
                <p class="help-block">File Upload (max 30MB): Files must be in .STL format*.</p>
            </div>
            <div class="form-group">
                <label for="colourCategoryInput">Colour</label>
                <InputSelect class="form-control" id="colourCategoryInput" @bind-Value="fullserveform.Colour">
                    @{
                        foreach (var value in Enum.GetValues(typeof(ColourCategory)))
                        {
                            <option value="@value">@value</option>
                        }
                    }
                </InputSelect>
            </div>
            <div class="form-group">
                <label for="copiesInput">Copies</label>
                <InputNumber class="form-control" id="copiesInput" @bind-Value="fullserveform.Copies" />
            </div>
            <p>Dimensions(mm)</p>
            <div class="form-group">
                <label for="dimxInput">X</label>
                <InputNumber class="form-control" id="dimxInput" @bind-Value="fullserveform.DimensionX" />
            </div>
            <div class="form-group">
                <label for="dimyInput">Y</label>
                <InputNumber class="form-control" id="dimyInput" @bind-Value="fullserveform.DimensionY" />
            </div>
            <div class="form-group">
                <label for="amountInput">Z</label>
                <InputNumber class="form-control" id="amountInput" @bind-Value="fullserveform.DimensionZ" />
            </div>
            <div class="form-group">
                <label for="nameInput">Name</label>
                <InputText class="form-control" id="nameInput" @bind-Value="fullserveform.Name" />
            </div>
            <div class="form-group">
                <label for="emailInput">Email</label>
                <InputText class="form-control" id="emailInput" @bind-Value="fullserveform.Email" />
            </div>
            <div class="form-group">
                <label for="ucidInput">UCID</label>
                <InputText class="form-control" id="ucidInput" @bind-Value="fullserveform.UCID" />
            </div>
            <div class="form-group">
                <label for="commentsInput">Comments</label>
                <InputText class="form-control" id="commentsInput" @bind-Value="fullserveform.Comments" />
            </div>
            <div>
                <button type="submit" id="submitForm" class="btn btn-primary">Submit</button>
            </div>
        </EditForm>
        <div>@success</div>
    </div>
</div>

@code {
    private FullServeModel fullserveform = new FullServeModel { };
    private string success = "";

    public void HandleValidSubmit()
    {
        success = "Submission Successful!";
    }

}

