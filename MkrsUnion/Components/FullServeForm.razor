<form>
    <div class="form-body">
        <div class="d-flex justify-content-between">
            <div class="mr-auto col-2"><a class="btn btn-primary" href="/fullserveinfo" role="button">Back</a></div>
            <div class="ml-auto col-10"><h1><b>Full Serve 3D-Printing Submission Form</b></h1></div>
        </div>
        <EditForm Model="@fullserveform" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="row">
                <div class="col">
                    <h2>Job Details</h2>
                    <div class="form-group">
                        <label for="exampleInputFile">File input</label>
                        <input type="file" id="exampleInputFile">
                        <p class="help-block">File Upload (max 30MB): Files must be in .STL format.</p>
                    </div>
                    <div class="form-group">
                        <label for="colourCategoryInput">Colour</label>
                        <select class="form-select" id="colourCategoryInput">
                            <option selected>Options</option>
                            <option>Black</option>
                            <option>Grey</option>
                            <option>White</option>
                            <option>Red</option>
                            <option>Orange</option>
                            <option>Yellow</option>
                            <option>Green</option>
                            <option>Blue</option>
                            <option>Purple</option>
                            <option>Pink</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="copiesInput">Copies</label>
                        <select class="form-select" id="copiesInput">
                            <option selected>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                        <span id="helpBlock" class="help-block">
                            If you require more then 10 copies,
                            please provide copy count in comments section below.
                        </span>
                    </div>
                    <div class="row">
                        <p>Dimensions(mm):</p>
                        <div class="col">
                            <label for="dimxInput">X</label>
                            <InputNumber class="form-control" id="dimxInput" @bind-Value="fullserveform.DimensionX" />
                        </div>
                        <div class="col">
                            <label for="dimyInput">Y</label>
                            <InputNumber class="form-control" id="dimyInput" @bind-Value="fullserveform.DimensionY" />
                        </div>
                        <div class="col">
                            <label for="amountInput">Z</label>
                            <InputNumber class="form-control" id="amountInput" @bind-Value="fullserveform.DimensionZ" />
                        </div>

                    </div>
                </div>
                <div class="col">
                    <h2>Personal Details</h2>
                    <div class="form-group">
                        <label for="nameInput">Name</label>
                        <InputText class="form-control" id="nameInput" placeholder="Full Name" @bind-Value="fullserveform.Name" />
                    </div>
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <InputText class="form-control" id="emailInput" placeholder="youremail@ucalgary.ca" @bind-Value="fullserveform.Email" />
                    </div>
                    <div class="form-group">
                        <label for="ucidInput">UCID</label>
                        <InputText class="form-control" id="ucidInput" placeholder="00000000" @bind-Value="fullserveform.UCID" />
                    </div>
                    <div class="form-group">
                        <label for="commentsInput">Comments</label>
                        <textarea class="form-control" id="commentsInput" placeholder="Please dont break my model!" rows="3"></textarea>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="mr-auto col-9">
                        <p>
                            Once submitted, we will send you a confirmation email that your print job is in our queue!
                            We will contact you within the next few days with an estimate for the tunraround time for
                            completion and confirm that your file does not include any issues. Turn around time is not
                            guranteed. Please contact us if you do not recieve a confirmation email. We may not be able to
                            accommodate jobs on short notice.
                        </p>
                    </div>
                    <div class="ml-auto col-3">
                        <button type="submit" id="submitForm" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </div>
            </div>
        </EditForm>
        <div class="success"><b>@success</b></div>
    </div>
</form>

@code {
    private FullServeModel fullserveform = new FullServeModel { };
    private string success = "";

    public void HandleValidSubmit()
    {
        success = "Submission Successful!";
    }

}

