<style>
    .info-body{
        font-family: 'Lato', sans-serif;
        color: #64574F;
        margin-top: 0px;
        margin-bottom: 50px;
        margin-right: 70px;
        margin-left: 70px;
    }
    .ml-auto.col-10{
        padding-left:200px;
