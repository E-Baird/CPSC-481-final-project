    }
    .btn-primary.form {
        width: 615px;
        height: 190px;
        font-size: 50px;
        background-color: #DE1514;
        border: #DE1514;
        padding-left: 30px;
        padding-top:20px;
        padding-right:30px;
    }
    .faq{
        margin-right:20px;
    }
    .confirm{
        margin-left:20px;
        font-size:18px;
